<UserControl x:Class="WakfuAudio.Mixer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WakfuAudio"
             mc:Ignorable="d" BorderThickness="2" AllowDrop="True" Drop="OnDrop"
             d:DesignHeight="450" d:DesignWidth="800"  BorderBrush="White">
    <Grid AllowDrop="True" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="PlayerBin"  AllowDrop="True" >
            
        </StackPanel>
        <StackPanel Grid.Column="1" x:Name="DeleteBin">
            
        </StackPanel>
        <Button x:Name="Model" Visibility="Collapsed">
            <Button.Background>
                <ImageBrush ImageSource="../Icons/trashIcon.png" Stretch="Uniform"/>
            </Button.Background>

        </Button>
    </Grid>
</UserControl>
